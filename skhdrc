# Applications
alt - space : kitty -1 ~ & disown

# Window manager
################

# Restart
alt + shift - r: launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

alt - tab : recent_space=`yabai -m query --windows --window recent | jq '.space'` && recent_window=`yabai -m query --windows --window recent | jq '.id'` && yabai -m space --focus "${recent_space}" && yabai -m window --focus "${recent_window}"

# Movement
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Swap window
alt + ctrl - h : yabai -m window --swap west
alt + ctrl - j : yabai -m window --swap south
alt + ctrl - k : yabai -m window --swap north
alt + ctrl - l : yabai -m window --swap east

# Resize window
alt + shift - h : yabai -m window --resize left:40:0
alt + shift - j : yabai -m window --resize bottom:0:-40
alt + shift - k : yabai -m window --resize top:0:40
alt + shift - l : yabai -m window --resize right:-40:0

# Change space
#alt - 1 : yabai -m space --focus 1
#alt - 2 : yabai -m space --focus 2
#alt - 3 : yabai -m space --focus 3
#alt - 4 : yabai -m space --focus 4
#alt - 5 : yabai -m space --focus 5
#alt - 6 : yabai -m space --focus 6
#alt - 7 : yabai -m space --focus 7
#alt - 8 : yabai -m space --focus 8
#alt - 9 : yabai -m space --focus 9
#alt - 0 : yabai -m space --focus 10

# Change window space
alt + shift - 1 : yabai -m window --space 1  ; yabai -m space --focus 1
alt + shift - 2 : yabai -m window --space 2  ; yabai -m space --focus 2
alt + shift - 3 : yabai -m window --space 3  ; yabai -m space --focus 3
alt + shift - 4 : yabai -m window --space 4  ; yabai -m space --focus 4
alt + shift - 5 : yabai -m window --space 5  ; yabai -m space --focus 5
alt + shift - 6 : yabai -m window --space 6  ; yabai -m space --focus 6
alt + shift - 7 : yabai -m window --space 7  ; yabai -m space --focus 7
alt + shift - 8 : yabai -m window --space 8  ; yabai -m space --focus 8
alt + shift - 9 : yabai -m window --space 9  ; yabai -m space --focus 9
alt + shift - 0 : yabai -m window --space 10 ; yabai -m space --focus 10

# Close window
alt + shift - q : yabai -m window --close ; yabai -m window --focus prev

# Rotate tree
alt - r : yabai -m space --rotate 90

# Mirror
alt - x : yabai -m space --mirror x-axis
alt - y : yabai -m space --mirror y-axis

# Toggle gaps
alt - g : yabai -m space --toggle padding ; yabai -m space --toggle gap

# Toggle float
alt - f : yabai -m window --toggle float; \
          yabai -m window --grid 4:4:1:1:2:2

# Toggle zoom-fullscreen
alt + shift - f : yabai -m window --toggle zoom-fullscreen

# Toggle border
alt - b : yabai -m window --toggle border
